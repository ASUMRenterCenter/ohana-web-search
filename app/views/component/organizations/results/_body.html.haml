= render 'component/organizations/results/header'
%section#results-entries
  - if @terminology.present?
    %section#terminology
      - dynamic_partial = 'component/terminology/'+@terminology
      = render :partial => "#{dynamic_partial}"

  - if @orgs.present?
    - if @map_data.present?
      = render 'component/organizations/results/map_view'
    - else
      %p#search-summary
        = format_summary(request.params)

    = render 'component/organizations/results/list_view'
  - else
    %section.no-results
      %p#search-summary
        = format_summary(request.params)
      %p.message
        %strong Unfortunately, your search returned no results.
        %em If you have trouble finding what you're looking for, try searching for a category of service:

      %ul
        - @service_terms.each do |service|
          %li
            %a{ :href => "/organizations?keyword=#{u(service[:name])}", :onClick => "_gaq.push(['_trackEvent', 'Home_Categories', 'Click', '#{service[:name]}']);" }
              = service[:name]
            %ul
              - service[:sub].each do |sub|
                %li
                  %a{ :href => "/organizations?keyword=#{u(sub)}", :onClick => "_gaq.push(['_trackEvent', 'Home_Categories', 'Click', '#{sub}']);" }
                    = sub
