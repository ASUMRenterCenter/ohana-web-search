%div
  %div.left-column
    %span.static-content><
      - if @array_for_maps.size != 0
        %a#map-view-control{ :href => '#', :class=>"button-utility button-map-zoom"}
          %i{ :class => "fa fa-plus-square" }
          Larger map
    %p.search-summary
      %span
        = page_entries_info @locations_array, entry_name: 'result'

      %span.map-summary.static-content
        = @map_search_summary_html if @array_for_maps.size != 0

  %div.right-column
    %div.floating-content.hide><
      %span
        %a{ :href => '#', :class=>"button-utility button-top"}
          %i{ :class => "fa fa-chevron-up" }
          Top

    = paginate @locations_array
