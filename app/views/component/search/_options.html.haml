- if params[:org_name].present? || params[:kind].present? || params[:category].present? || params[:language].present? || [:service_area].present?

  %section#search-options

    - if params[:org_name].present?
      %fieldset#orgname-options
        %legend Agency name...
        %div
          - org_name = params[:org_name]
          - new_params = @search_params.dup
          - new_params.delete(:org_name)
          %a{ :href => organizations_path(new_params) }
            = org_name
          = hidden_field_tag 'org_name',org_name

    - if params[:category].present?
      %fieldset#category-options
        %legend Category of service...
        %div
          - category = params[:category]
          - new_params = @search_params.dup
          - new_params.delete(:category)
          %a{ :href => organizations_path(new_params) }
            = category
          = hidden_field_tag 'category',category

    - if params[:kind].present?
      %fieldset#kind-options
        %legend Kind of service...
        %div
          - kind = params[:kind][0]
          - new_params = @search_params.dup
          - new_params.delete(:kind)
          %a{ :href => organizations_path(new_params) }
            = kind
          = hidden_field_tag 'kind[]',kind

    - if params[:language].present?
      %fieldset#language-options
        %legend Language availability...
        %div
          - language = params[:language]
          - new_params = @search_params.dup
          - new_params.delete(:language)
          %a{ :href => organizations_path(new_params) }
            = language
          = hidden_field_tag 'language',language

    - if params[:service_area].present?
      %fieldset#service-area-options
        %legend Service available in...
        %div
          - service_area = params[:service_area]
          - service_area = "San Mateo County, CA" if service_area == 'smc'
          - new_params = @search_params.dup
          - new_params.delete(:service_area)
          %a{ :href => organizations_path(new_params) }
            = service_area
          = hidden_field_tag 'service_area',service_area

%button{:type=>'submit', :id=>'update-btn', :title=>"Update"}
  %span{"data-icon"=>"🔍" , :class=>"search-button ohana-icon"}
  %span Update

