%section#category-box
  -# Category search terms that are displayed on the homepage
  %ul
    - @service_terms.each do |service|
      %li
        %a{ :href => "/organizations?keyword=#{u(service[:name])}", :onClick => "_gaq.push(['_trackEvent', 'Home_Categories', 'Click', '#{service[:name]}']);" }
          = service[:name]
        %ul
          - service[:sub].each do |sub|
            %li
              %a{ :href => "/organizations?keyword=#{u(sub)}", :onClick => "_gaq.push(['_trackEvent', 'Home_Categories', 'Click', '#{sub}']);" }
                = sub